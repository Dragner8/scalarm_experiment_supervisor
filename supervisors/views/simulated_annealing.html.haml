%section.panel.radius
  %h3.subheader= 'Simulated annealing'
  = hidden_field_tag 'supervisor_script_id', 'simulated_annealing'
  = hidden_field_tag 'type', 'supervised'
  = hidden_field_tag 'supervisor_script_params'

  = form_tag '', id: 'supervisor_params' do
    .content
      .row
        .small-5.columns
          = label_tag :maxiter, 'Maximum number of iterations:', class: 'right inline'
        .small-4.columns.end
          = number_field_tag :maxiter, 1, min: 1, required: true, class: 'text-right'

      .row
        .small-5.columns
          = label_tag :dwell, 'dwell:', class: 'right inline'
        .small-4.columns.end
          = number_field_tag :dwell, 1, min: 1, required: true, class: 'text-right'

      .row
        .small-5.columns
          = label_tag :schedule, 'Scheduling method:', class: 'right inline'
        .small-4.columns.end
          = text_field_tag :schedule, 'boltzmann', min: 1, required: true, class: 'text-right'


